<config>
    <modules>
        <Solvingmagento_OneStepCheckout>
            <version>0.1.1</version>
        </Solvingmagento_OneStepCheckout>
    </modules>
    <global>
        <blocks>
            <solvingmagento_onestepcheckout>
                <class>Solvingmagento_OneStepCheckout_Block</class>
            </solvingmagento_onestepcheckout>
        </blocks>
        <helpers>
            <solvingmagento_onestepcheckout>
                <class>Solvingmagento_OneStepCheckout_Helper</class>
            </solvingmagento_onestepcheckout>
        </helpers>
        <models>
            <solvingmagento_onestepcheckout>
                <class>Solvingmagento_OneStepCheckout_Model</class>
            </solvingmagento_onestepcheckout>
        </models>
    </global>
    <frontend>
        <layout>
            <updates>
                <solvingmagento_onestepcheckout module="Solvingmagento_OneStepCheckout">
                    <file>solvingmagento/onestepcheckout.xml</file>
                </solvingmagento_onestepcheckout>
            </updates>
        </layout>
        <routers>
            <solvingmagento_onestepcheckout>
                <use>standard</use>
                <args>
                    <module>Solvingmagento_OneStepCheckout</module>
                    <frontName>onestep</frontName>
                </args>
            </solvingmagento_onestepcheckout>
        </routers>
    </frontend>
    <default>
        <checkout>
            <options>
                <onestep_checkout_enabled>0</onestep_checkout_enabled>
            </options>
        </checkout>
    </default>
</config>